<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/finance-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.book.keeping.controller.ChatViewController">
   <children>
      <BorderPane>
         <top>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #4a6572; -fx-padding: 10px;">
               <children>
                  <Label styleClass="title-label" text="Financial Assistant Chat" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="statusLabel" styleClass="status-label" text="Idle" textFill="#e1e1e1">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <StackPane BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane fx:id="chatScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                     <content>
                        <ListView fx:id="chatListView" prefHeight="400.0" prefWidth="600.0" styleClass="chat-list-view" />
                     </content>
                  </ScrollPane>
                  <StackPane fx:id="loadingPane" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
                     <children>
                        <VBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Label fx:id="loadingLabel" text="Thinking..." textFill="WHITE">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <StackPane fx:id="progressIndicatorWrapper" alignment="CENTER" prefHeight="50.0" prefWidth="50.0">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </StackPane>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </StackPane>
         </center>
         <bottom>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="8.0">
                     <children>
                        <TextField fx:id="messageField" onAction="#handleSendMessage" prefHeight="40.0" promptText="Enter your question..." HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSendMessage" prefHeight="40.0" prefWidth="80.0" styleClass="send-button" text="Send">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="stopButton" mnemonicParsing="false" onAction="#handleStopRequest" prefHeight="40.0" prefWidth="80.0" styleClass="stop-button" text="Stop" disable="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearChat" text="Clear Chat" />
                        <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleCloseAction" text="Close" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="0.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane> 